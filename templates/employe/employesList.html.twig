{% extends 'base.html.twig' %}

{% block title %}Employés de {{ entreprise.raisonSociale }}{% endblock %}

{% block body %}

    <h1>Liste des employés de l'entreprise "{{ entreprise.raisonSociale }}"</h1>

    <a class="btn btn-primary" href="{{ path('app_accueil') }}">Retour</a>

    <br><br>
    <a class="btn btn-primary" href="{{ path('app_addEmploye') }}">Ajouter un employé</a>
    <br><br>

    {% for employe in employesArray  %}
        {# <a href="/employeDetail/{{employe.id}}">{{ employe.prenom }} {{ employe.nom | upper }}</a> #}
        <a href="{{ path('app_employeDetail', {'id': employe.id}) }}">{{ employe.prenom }} {{ employe.nom | upper }}</a>
        <br>
    {% endfor %}

{% endblock %}
